WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Room ID: "
                size_hint: 0.5,0.12
                pos_hint: {"x":0.01, "top":0.8-0.13}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: var_id
                pos_hint: {"x":0.35, "top":0.8-0.15}
                size_hint: None, None
                hint_text: "Enter Room.."
                width: 260
                height: 50
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            id: btn_
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Enter" if btn_.state == "normal" else "Loading.."
            font_size: (root.width**2 + root.height**2) / 14**4

            on_release:
                app.root.current="second" if var_id.text == "11" else "main"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 50

    RoundedButton:
        text: "Connect"
        font_size: "30sp"
        size_hint: (.4, .2)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        # blue color for the button
        # background_color: (48/255,84/255,150/255,1)
        # background_normal: ""
        on_release:
            #app.root.current="main"
            #root.manager.transition.direction = "right"
            root._test()

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]





